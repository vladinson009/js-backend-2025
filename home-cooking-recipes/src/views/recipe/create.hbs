<section class="form-container">
    <h2>Create Recipe</h2>
    <form method="POST">
        <label for="title">Recipe Title:</label>
        <input type="text" id="title" name="title" value="{{userInput.title}}">

        <label for="description">Description:</label>
        <textarea id="description" name="description">{{userInput.description}}</textarea>

        <label for="ingredients">Ingredients:</label>
        <textarea id="ingredients" name="ingredients">{{userInput.ingredients}}</textarea>

        <label for="instructions">Instructions:</label>
        <textarea id="instructions" name="instructions">{{userInput.instructions}}</textarea>

        <label for="image">Image URL:</label>
        <input type="url" id="image" name="image" value="{{userInput.image}}">

        <button type="submit">Create Recipe</button>
    </form>
</section>