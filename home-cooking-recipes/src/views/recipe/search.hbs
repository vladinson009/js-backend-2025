<section class="search-container">
    <h2>Search Recipes</h2>
    <form action="/recipes/search/criteria" method="GET">
        <input type="text" id="search" name="search" placeholder="Search for recipes..." value="{{query}}">
        <button type="submit">Search</button>
    </form>
    <div class="search-results">
        {{#each recipes}}

        <article class="recipe">
            <img src="{{image}}" alt="{{title}}">
            <h3>{{title}}</h3>
            <p>{{description}}</p>
            <a href="/recipes/details/{{_id}}">Read More</a>
        </article>
        <!-- Add more search results here -->
        {{else}}
        <p class="no-match">There are no recipes found yet!</p>
        <!-- <p class="no-match">There are no recipes found yet!</p> -->
        {{/each}}
    </div>
</section>