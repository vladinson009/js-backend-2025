{{setTitle 'Home Page'}}
<main class="home">
  <!-- Home page -->
  <section id="home">
    <h1>Welcome to Earth Treasure Vaul</h1>
    <h2>
      From sparkling geodes to ancient fossils, EarthTreasureVault offers an
      exclusive collection of natural treasures, each with its own unique story and
      geological significance.
    </h2>
  </section>

  <section id="last-added">
    {{#each stones}}
    <div>
      <img src="{{image}}" />
      <p>Name: {{name}}</p>
      <p>Category: {{category}}</p>
      <a class="details-btn" href="/stones/details/{{_id}}">Details</a>
    </div>
    {{else}}
    <!-- <p class="no-post">There are no gems and minerals!</p> -->
    <p class="no-post">There are no gems and minerals!</p>
    {{/each}}
  </section>
</main>