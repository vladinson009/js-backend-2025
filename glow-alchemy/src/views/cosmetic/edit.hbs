{{setTitle 'Edit Product - GlowAlchemy'}}
<section class="form-container">
    <h2>Edit Recipe</h2>
    <form method="POST">
        <label for="name">Product Name:</label>
        <input type="text" id="name" name="name" value="{{product.name}}">

        <label for="skin">Skin Type:</label>
        <textarea id="skin" name="skin">{{product.skin}}</textarea>

        <label for="description">Product Description:</label>
        <textarea id="description" name="description">{{product.description}}</textarea>

        <label for="ingredients">Key Ingredients:</label>
        <textarea id="ingredients" name="ingredients">{{product.ingredients}}</textarea>

        <label for="benefits">Benefits:</label>
        <textarea id="benefits" name="benefits">{{product.benefits}}</textarea>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="{{product.price}}">

        <label for="image">Image URL:</label>
        <input type="url" id="image" name="image" value="{{product.image}}">

        <button type="submit">Create Product Card</button>
    </form>
</section>