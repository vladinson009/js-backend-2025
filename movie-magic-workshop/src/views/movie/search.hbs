<section id="search">
    <h1>Search</h1>
    <form action="/movies/searchBy" method="GET" class="form">
        <input type="text" class="search" name="title" placeholder="Title..." value="{{filter.title}}">
        <input type="text" class="genre" name="genre" placeholder="Genre..." value="{{filter.genre}}">
        <input type="number" class="year" name="year" placeholder="Year..." value="{{filter.year}}">
        <input type="submit" value="search">
    </form>
</section>

<section id="catalog">
    <div class="band">

        <!-- If there are posts for movie in the database display each of them -->
        {{#each movies}}
        {{> movieCard}}
        {{else}}
        <div class="no-posts">
            <p class="no-offer">There are no movies matched...</p>
        </div>
        {{/each}}

        <!-- If there are no posts matched display: -->
        <!--  -->
    </div>
</section>