<section class="profile-hero">
    <div class="container">
        <h2>User Profile</h2>
        <p>Welcome back, <span id="username">{{user.name}}</span> <strong id="email">( {{user.email}} )</strong>
        </p>
    </div>
</section>

<section class="created-laptops">
    <div class="container">
        <h3>Created Laptops</h3>
        <div class="laptop-list">
            {{#each devices}}
            {{>laptopItem}} <!-- Add more laptop items as needed -->
            {{else}}
            <!-- Add more laptop items as needed -->
            <p class="no-post">You haven't created a post yet</p>
            {{/each}}
        </div>
    </div>
</section>
<section class="preferred-laptops">
    <div class="container">
        <h3>Preferred Laptops</h3>
        <div class="laptop-list">
            {{#each preferedDevices}}
            {{>laptopItem}}
            <!-- Add more laptop items as needed -->
            {{else}}
            <p class="no-post">You haven't preferred any devices yet</p>
            {{/each}}
        </div>
    </div>
</section>